@model IEnumerable<WechatUserGroup>

@{
    ViewBag.Title = "Index".Localize();
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New".Localize(), "CreateGroup")
</p>
<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OfficialAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OfficialAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit".Localize(), "EditGroup", new { id = item.Id }) |
                @Html.ActionLink("Details".Localize(), "GroupDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete".Localize(), "DeleteGroup", new { id = item.Id })
            </td>
        </tr>
    }

</table>
