@model IEnumerable<WechatUser>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Refresh", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="刷新粉丝" class="btn btn-default" />
    }
</p>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { pageIndex = page }))
<table class="table">
    <tr>

        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.OpenId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Province)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeadImageUrl)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Message", "Message", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <img src="@item.HeadImageUrl" width="40" alt="@item.NickName" />
            </td>

        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { pageIndex = page }))