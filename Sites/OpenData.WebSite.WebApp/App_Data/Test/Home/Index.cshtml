@{
    ViewBag.Title = "Home Page".Localize();
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.RenderBody();
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        //提交新建
        $('form').ajaxForm({
            success: function (data) {
                if (data.success) {
                    alert(data.message);
                    return;
                }
                alert(data.error);
            }
        });
    </script>
}
